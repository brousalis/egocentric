$('#no_comments').fadeOut()
<% if @comment.valid? %>
  <% if @reply %>
    if($('#comment_<%= @comment.commentable_id %> ul').length == 0)
      $('#comment_<%= @comment.commentable_id %>').prepend('<ul id="comment_<%= @comment.commentable_id %>_replies" class="replies"></ul>')
    $('#comment_<%= @comment.commentable_id %>_replies').prepend("<%= escape_javascript( render @comment, :locals => {:reply => @reply} ) %>")
    $('#commentable_id').val('<%= @comment.commentable.commentable_id %>')
    $('#commentable_type').val('<%= @comment.commentable.commentable_type %>')
    $('#new_comment textarea').val('')
    setTimeout(function() { $('html, body').animate({scrollTop: $('#comment_<%= @comment.id %>').offset().top - 80 }, 200);}, 500);
  <% else %>
    $('#comments').prepend("<%= escape_javascript( render @comment, :locals => {:reply => @reply} ) %>")
    setTimeout(function() { $('html, body').animate({scrollTop: $('#comment_<%= @comment.id %>').offset().top - 80 }, 200);}, 500);
    $('#new_comment textarea').val('')
  <% end %>
<% else %>
<% end %>
