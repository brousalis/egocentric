.guides.guide
  .row.top
    .span4.promotion
      .header
        %span Promotions
      .body
        #promo-slider.carousel
          .carousel-inner
            .item.ad.active
            .item.extra
              Extra
    .span4.leaderboard
      .header
        %span leaderboards
        %span.leaders 
          %a{:href => "#"} Guides
        %span.leaders 
          %a.active{:href => "#"} Authors
      .body
        %ul.leaderboard
          - @user_leaders.collect do |u|
            - user = User.find_by_username(u.username)
            %li
              %img{:src => user.avatar.url(:thumb)}
              %span= user.username
              %span.count= u.guides_count
              %span.bar{:style => "width: #{bar_width(u.guides_count)}%"}
    .span4
      .header
        %span Recent activity
      .body
        lols
  .row
    .sidebar.scroll.index.span3
      %ul.nav
        %li.top
        %li.meta
          .left 
            Sort by
          .right
            = link_to "Date", {:controller => "guides", :action => "index", :filter => "date"}, {:class => "filter active"}
            = link_to "Rating", {:controller => "guides", :action => "index", :filter => "rating"}, {:class => "filter"} 
        %li.search
          %input.searchbox
        %li.list
          %div
            %h1 Categories
            %ul#source
              %li
                %a.all.active{:href => "#"} All
              - Guide.all_categories.each do |cat|
                %li
                  %a{:href => "#", :class => "#{cat}"} #{cat.capitalize}  
    .guide-list.span9
      .header
        %span.title Guides
        %span.count= Guide.find(:all).count
        %span.ajax 
      .all-guides 
        .no-guides
          No guides are found.
        = render "guides"
