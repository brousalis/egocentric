<dl>
  <dt>Email</dt>
  <dd><%= @user.email %></dd>

  <dt>Sign in count</dt>
  <dd><%= @user.sign_in_count %></dd>

  <dt>Last sign in at</dt>
  <dd><%= l( @user.last_sign_in_at, :format => :long_date ) %></dd>

  <dt>Last sign in IP</dt>
  <dd><%= @user.last_sign_in_ip %></dd>

  <dt>Created at</dt>
  <dd><%= l( @user.created_at, :format => :long_date ) %></dd>

  <dt>Updated at</dt>
  <dd><%= l( @user.updated_at, :format => :long_date ) %></dd>

</dl>
